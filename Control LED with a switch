var b = require('bonescript');

var outputPin = "P9_14";
var inputPin = "P9_42";
var state;


b.pinMode(inputPin, b.INPUT);
b.pinMode(outputPin, b.OUTPUT);

b.attachInterrupt(inputPin, true, b.CHANGE, buttonchange);

function buttonChange(input) {
    if(input.value == b.HIGH)
            state = b.HIGH;
        else
           state = b.LOW;
    b.digitalWrite(outputPin, state);
}
